<h1>New Sub</h1>

<form method="POST" action="<%= subs_url %>">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

    <label for="new-sub-title">Title</label>
    <input type="text" name="sub[title]" id="new-sub-title" value="<%= @sub.title %>">

    <label for="new-sub-description">Description</label>
    <textarea name="sub[description]" id="new-sub-description" placeholder="Your description here..."><%= @sub.description %></textarea>
    <input type="hidden" name="sub[user_id]" value="<%= current_user.id %>">

    <input type="submit" value="Create Sub">
</form>

<% if flash.now[:errors] %>
    <% flash.now[:errors].each do |error| %>
        <%= error %>
    <% end %>
<% end %>